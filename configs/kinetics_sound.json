{
    "dataset": {
        "dataset_name": "kinetics_sound",
        "data_root":"/data_root/kinetics_sound"
    },
    "backbone": {
        "name": "ResNet-18"
    },
    "loss": {
        "type": "CrossEntropy"
    },
    "train": {
        "epoch_list" : [25,50,25,50],
        "batch_size":12,
        "mixup_alpha": 1.0,
        "num_workers":8,
        "flat_ratio": 0.3,
        "noise_ratio": 1.0e-10,
        "noise_ratio_cls":1.0e-10,
        "temperature1": 0.4,
        "optimizer": {
            "type": "SGD", 
            "momentum": 0.9,
            "lr":1e-2,
            "wc" : 1.0e-4
        },
        "lr_scheduler":{
            "type": "warmup",
            "lr_step": [160, 180],
            "lr_factor": 0.1,
            "warmup_epoch": 2,
            "patience":40
        }
    },
    "test": {
        "batch_size":64,
        "num_workers":8
    },
    "setting": {
        "type": "KS Classification", 
        "num_class": 31
    },
    "seed": 42,
    "gpu_id": "4",
    "image_res": 224,
    "fps":3,
    "debug": false
}
